<h1 class="text-8xl font-normal leading-none text-center text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-green-500 font-heading">
  GitHub User Stats
</h1>
<h2><%= @username %></h2>
<div>
  <h3>Stars</h3>
  <p><%= @stars %></p>
</div>
<h3><%= @repos.count %> Public Repositories</h3>
<ul>
  <% @repos.each do |repo| %>
    <li>
      <a href="<%= repo.html_url %>">
        <%= repo.name %> <%= repo.fork ? "(forked)" : "" %>
      </a>
    </li>
  <% end %>
</ul>
